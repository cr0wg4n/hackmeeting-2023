---
import { Icon } from "astro-icon";
import HeroImage from "~/components/hero-image.astro";
import type { FooterLink } from "~/types";

const links: Array<FooterLink> = [
  {
    url: "https://github.com/HM-Bolivia",
    description: "Hackmeeting en GitHub",
    icon: "fa-brands:github",
  },
  {
    url: "https://www.facebook.com/hackmeetingbolivia",
    description: "Hackmeeting en Facebook",
    icon: "fa-brands:facebook",
  },
  {
    url: "https://www.instagram.com/hackmeetingbolivia/",
    description: "Hackmeeting en Instagram",
    icon: "fa-brands:instagram",
  },
  {
    url: "https://twitter.com/HackmeetingB0",
    description: "Hackmeeting en Twitter",
    icon: "fa-brands:twitter",
  },
];
---

<footer class="relative flex h-44 items-center justify-center">
  <div class="absolute inset-0 overflow-hidden opacity-50 bg-black">
    <!-- <HeroImage /> -->
  </div>
  <ul class="relative grid grid-cols-4 gap-4">
    {
      links.map((link) => (
        <li>
          <a
            class="flex h-14 w-14 items-center justify-center rounded-full border-2 border-current p-3"
            href={link.url}
            title={link.description}
          >
            <span class="sr-only">{link.description}</span>
            <Icon class="h-full" name={link.icon} />
          </a>
        </li>
      ))
    }
  </ul>
</footer>
