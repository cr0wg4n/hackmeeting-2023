---
import Gof from "./game/gof.astro";
import BoliviaFlag from './flag-image.vue'
import Timer from "~/components/timer.vue";
import Icon from "astro-icon";
---

<section class="relative h-full bg-black">
  <BoliviaFlag />
  <Gof/>
  <div class="relative h-full">
    <div class="w-full h-full flex items-center justify-center">
      <div class="w-full flex flex-col items-center gap-5">
        <div
          class="font-strong text-center font-extrabold tracking-tighter text-6xl md:text-8xl w-full"
        >
          <span class="gradient-text">
            HACKMEETING
          </span>
          <br /> 
          <span class="gradient-text-yellow">
            0x7E7
          </span>
        </div>
        <div class="my-6 border-primary border-2 p-2 md:p-4">
          <Timer client:load />
        </div>
        <div class="my-1"></div>
        <a
          href="https://l.linklyhq.com/l/1utcJ?source=website"
          target="_blank"
          rel="noopener"
          class="btn-hm animate-opacity-announcement md:text-lg"
        >
          <div class="flex flex-row justify-center items-center">
            <Icon pack="ph" name="ticket" class="h-10 -rotate-45 text-secondary mr-4" />
            <div class="flex flex-col">
              <span class="font-bold font-strong uppercase">Registrate al evento</span>
              <div class="text-xs font-extrabold">
                <span class="text-secondary font-mono md:hidden">:~$ bash ingresar_gratis.sh</span>
                <span class="text-secondary font-mono hidden md:flex">:~$ ./ingresar_completamente_gratis.sh</span>
              </div>
            </div>
          </div>
        </a>
      </div> 
    </div>
  </div>
</section>
