---
export interface Props {
  id: string;
  title: string;
}

const { title, id } = Astro.props;
---

<section
  id={id}
  class="flex scroll-mt-24 flex-col items-center gap-4 space-y-4 py-4"
>
  { 
    title && 
    <div class="flex flex-col items-center gap-4">
      <slot name="eyebrow" />
      <h2
        class="font-strong gradient-text text-center font-extrabold tracking-tight md:text-6xl text-4xl"
      >
        {title}
      </h2>
    </div>
  }
  <p class="max-w-4xl text-center font-sans md:text-xl text-md font-semibold pb-8">
    <slot name="lead" />
  </p>
  <slot />
</section>
